<UserControl x:Class="FunCraftLauncher.Views.DownloadPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="920">
    <Grid Background="#FF2C2C2C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧边栏 - 只保留原版游戏按钮 -->
        <Border Grid.Column="0" Background="#FF252525" CornerRadius="0,0,0,8" Padding="15,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 原版游戏按钮 -->
                <Button Grid.Row="0"
                        x:Name="VanillaGameButton"
                        Height="40"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Content="&#xE768; 原版游戏">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- 右侧内容区 - 包含版本类型筛选和版本列表 -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#FF3C3C3C" Padding="20,15" CornerRadius="8" Margin="0,0,0,15">
                <Grid>
                    <TextBlock Text="游戏下载" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <!-- 搜索框 -->
                    <Border HorizontalAlignment="Right" 
                            Width="200" 
                            Height="32"
                            Background="#FF2C2C2C"
                            CornerRadius="16">
                        <Grid>
                            <TextBox x:Name="SearchTextBox"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="12,0,35,0"
                                     VerticalContentAlignment="Center"
                                     FontSize="13"
                                     TextChanged="SearchTextBox_TextChanged"/>
                            <TextBlock Text="&#xE721;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="#FF888888"
                                       FontSize="14"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- 版本类型筛选 -->
            <Border Grid.Row="1" Background="#FF252525" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="版本类型：" Foreground="#FF888888" FontSize="13" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <RadioButton x:Name="ReleaseRadio" 
                                 Content="正式版" 
                                 Foreground="White"
                                 FontSize="13"
                                 Margin="0,0,20,0"
                                 IsChecked="True"
                                 Checked="VersionType_Checked"/>
                    <RadioButton x:Name="SnapshotRadio" 
                                 Content="快照版" 
                                 Foreground="White"
                                 FontSize="13"
                                 Margin="0,0,20,0"
                                 Checked="VersionType_Checked"/>
                    <RadioButton x:Name="BetaRadio" 
                                 Content="Beta版" 
                                 Foreground="White"
                                 FontSize="13"
                                 Margin="0,0,20,0"
                                 Checked="VersionType_Checked"/>
                    <RadioButton x:Name="AlphaRadio" 
                                 Content="Alpha版" 
                                 Foreground="White"
                                 FontSize="13"
                                 Margin="0,0,20,0"
                                 Checked="VersionType_Checked"/>
                    <RadioButton x:Name="AllRadio" 
                                 Content="全部版本" 
                                 Foreground="White"
                                 FontSize="13"
                                 Checked="VersionType_Checked"/>
                    <Button x:Name="RefreshButton"
                            Height="28"
                            Width="90"
                            Margin="20,0,0,0"
                            Background="#FF0078D4"
                            Foreground="White"
                            FontSize="12"
                            BorderThickness="0"
                            Content="&#xE72C; 刷新"
                            Click="RefreshButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF106EBE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- 版本列表 -->
            <Border Grid.Row="2" 
                    Background="#FF252525" 
                    CornerRadius="8" 
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列表标题 -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="版本" Foreground="#FF888888" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="类型" Foreground="#FF888888" FontSize="12" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="发布日期" Foreground="#FF888888" FontSize="12" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="操作" Foreground="#FF888888" FontSize="12" HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- 版本列表 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="VersionListPanel">
                            <!-- 动态生成的版本项 -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 加载提示 -->
                    <Border x:Name="LoadingPanel" 
                            Grid.Row="1"
                            Background="#FF252525"
                            Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="&#xE768;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="#FF0078D4"
                                       FontSize="32"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10">
                                <TextBlock.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                                 From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="0" CenterX="16" CenterY="16"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock Text="正在加载版本列表..." 
                                       Foreground="#FF888888" 
                                       FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- 空状态 -->
                    <StackPanel x:Name="EmptyPanel" 
                                Grid.Row="1"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="&#xE71C;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="#FF555555"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="暂无版本数据" 
                                   Foreground="#FF888888" 
                                   FontSize="14"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
