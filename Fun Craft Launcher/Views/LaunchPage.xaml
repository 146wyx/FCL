<UserControl x:Class="FunCraftLauncher.Views.LaunchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="920">
    <Grid Background="#FF2C2C2C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧边栏 - 登录区域 -->
        <Border Grid.Column="0" Background="#FF252525" CornerRadius="0,0,0,8" Padding="15,20" Grid.ColumnSpan="2" Margin="0,0,727,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 登录区域 -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 登录按钮区域 -->
                    <StackPanel x:Name="LoginButtonsPanel" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <!-- 正版按钮 -->
                        <Button x:Name="PremiumLoginButton"
                                Height="32"
                                Width="75"
                                Margin="0,0,8,0"
                                Background="#FF0078D4"
                                Foreground="White"
                                FontSize="12"
                                BorderThickness="0"
                                Click="PremiumLoginButton_Click">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="正版"/>
                                </StackPanel>
                            </Button.Content>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF106EBE"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- 离线按钮 -->
                        <Button x:Name="OfflineLoginButton"
                                Height="32"
                                Width="75"
                                Background="#FF4CAF50"
                                Foreground="White"
                                FontSize="12"
                                BorderThickness="0"
                                Click="OfflineLoginButton_Click">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="离线"/>
                                </StackPanel>
                            </Button.Content>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF45A049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- 正版登录面板 -->
                    <StackPanel x:Name="PremiumLoginPanel" Grid.Row="1" Visibility="Visible" VerticalAlignment="Top">
                        <Border x:Name="PremiumPlayerAvatar"
                                Width="70"
                                Height="70"
                                Background="#FF3C3C3C"
                                CornerRadius="8"
                                Margin="0,0,0,8"
                                Visibility="Collapsed">
                            <TextBlock x:Name="PremiumPlayerAvatarText"
                                       Text=""
                                       Foreground="White"
                                       FontSize="28"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="PremiumPlayerNameText"
                                   Text=""
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"
                                   Visibility="Collapsed"/>
                        <Button x:Name="PremiumConfirmButton"
                                Height="36"
                                Background="#FF0078D4"
                                Foreground="White"
                                FontSize="13"
                                BorderThickness="0"
                                Content="登录"
                                Click="PremiumConfirmButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF106EBE"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- 离线登录面板 -->
                    <StackPanel x:Name="OfflineLoginPanel" Grid.Row="1" Visibility="Collapsed" VerticalAlignment="Top">
                        <Border Background="#FF3C3C3C" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="36" Foreground="White" HorizontalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="离线登录" Foreground="White" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="OfflineUsernameTextBox"
                                 Height="34"
                                 Background="#FF3C3C3C"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="10,0"
                                 VerticalContentAlignment="Center"
                                 FontSize="12"
                                 Margin="0,0,0,8"/>
                        <Button x:Name="OfflineConfirmButton"
                                Height="34"
                                Background="#FF4CAF50"
                                Foreground="White"
                                FontSize="12"
                                BorderThickness="0"
                                Content="进入游戏"
                                Click="OfflineConfirmButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF45A049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- 已登录信息显示 -->
                    <StackPanel x:Name="LoggedInInfoPanel" Grid.Row="1" Visibility="Collapsed" VerticalAlignment="Top">
                        <Border Width="70"
                                Height="70"
                                Background="#FF3C3C3C"
                                CornerRadius="8"
                                Margin="0,0,0,10">
                            <TextBlock x:Name="AvatarText"
                                       Text=""
                                       Foreground="White"
                                       FontSize="28"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="UsernameText"
                                   Text=""
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="LoginTypeText"
                                   Text=""
                                   Foreground="#FFAAAAAA"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <Button x:Name="LogoutButton"
                                Height="32"
                                Background="#FFDC3545"
                                Foreground="White"
                                FontSize="12"
                                BorderThickness="0"
                                Click="LogoutButton_Click">
                            <Button.Content>
                                <TextBlock Text="退出登录"/>
                            </Button.Content>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFC82333"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- 启动游戏按钮 - 底部 -->
                <Button Grid.Row="1" 
                        x:Name="LaunchGameButton"
                        Content="启动游戏"
                        Height="45"
                        Margin="0,15,0,0"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="LaunchGameButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- 右侧内容区域 -->
        <Grid Grid.Column="1">
            <StackPanel x:Name="RightContentPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                <Border Width="100" Height="100"
                        Background="#FF3C3C3C"
                        CornerRadius="8"
                        Margin="0,0,0,15">
                    <TextBlock x:Name="WelcomeAvatarText"
                               Text="?"
                               Foreground="White"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="WelcomeText"
                           Text=""
                           Foreground="#FFAAAAAA"
                           FontSize="14"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
